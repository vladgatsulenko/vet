{% extends 'base.html.twig' %}

{% block title %}{{ 'adminPagetitle'|trans }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>{{ 'adminPageTableName'|trans }} ({{ pagination.total }})</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">{{ 'adminPageCollumId'|trans }}</th>
                <th scope="col">{{ 'adminPageCollumEmail'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">{{ 'adminPageError'|trans }}.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% include 'partials/_pagination.html.twig' with { pagination: pagination, route: 'admin_dashboard' } %}
</div>
{% endblock %}
