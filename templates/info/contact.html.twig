{% extends 'base.html.twig' %}

{% block title %}{{'infoContactTittle'|trans}}{% endblock %}

{% block body %}
  <h1>{{'infoContactHeader'|trans}}</h1>
  <p>{{'infoContactText'|trans}}</p>

  <form method="post" class="mt-4">
    <div class="mb-3">
      <label for="name" class="form-label">{{'infoContactFieldName'|trans}}</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">{{'infoContactFieldEmail'|trans}}</label>
      <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="mb-3">
      <label for="message" class="form-label">{{'infoContactFieldMessage'|trans}}</label>
      <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">{{'infoContacSendButton'|trans}}</button>
  </form>
{% endblock %}
