{% set routeParams = routeParams|default({}) %}
{% set maxVisible = 7 %}

{% if totalPages is not defined %}
    {% set totalPages = 1 %}
{% endif %}

<nav aria-label="Page navigation">
  <ul class="pagination">
    {% set prevPage = currentPage - 1 %}
    <li class="page-item {% if currentPage <= 1 %}disabled{% endif %}">
      <a class="page-link" href="{% if currentPage > 1 %}{{ path(route, routeParams|merge({'page': prevPage, 'limit': limit})) }}{% else %}#{% endif %}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>

    {% set start = 1 %}
    {% set end = totalPages %}
    {% if totalPages > maxVisible %}
        {% set half = (maxVisible / 2)|round(0, 'floor') %}
        {% set start = currentPage - half %}
        {% set end = currentPage + half %}

        {% if start < 1 %}
            {% set start = 1 %}
            {% set end = maxVisible %}
        {% endif %}
        {% if end > totalPages %}
            {% set end = totalPages %}
            {% set start = totalPages - maxVisible + 1 %}
        {% endif %}
    {% endif %}

    {% for p in start..end %}
      <li class="page-item {% if p == currentPage %}active{% endif %}">
        <a class="page-link" href="{{ path(route, routeParams|merge({'page': p, 'limit': limit})) }}">{{ p }}</a>
      </li>
    {% endfor %}

    {% set nextPage = currentPage + 1 %}
    <li class="page-item {% if currentPage >= totalPages %}disabled{% endif %}">
      <a class="page-link" href="{% if currentPage < totalPages %}{{ path(route, routeParams|merge({'page': nextPage, 'limit': limit})) }}{% else %}#{% endif %}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
